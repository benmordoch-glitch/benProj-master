    <VerticalStackLayout BackgroundColor="Gray" Spacing="10">
        <Grid RowSpacing="0"  RowDefinitions="*,*,*">
            <Button BackgroundColor="Black" Grid.Column="0"  Grid.Row="0"/>
            <Button BackgroundColor="red" Grid.Column="0" Grid.Row="1"/>
            <Button BackgroundColor="Yellow" Grid.Column="0" Grid.Row="2"/>

        </Grid>


        <Grid RowSpacing="0"  ColumnDefinitions="*,*,*" >
            <Button BackgroundColor="Green" Grid.Column="0"  Grid.Row="0" TextColor="Blue" Text="1"/>
            <Button BackgroundColor="White" Grid.Column="1" Grid.Row="0" TextColor="Blue" Text="2"/>
            <Button BackgroundColor="Red" Grid.Column="2" Grid.Row="0"  TextColor="Blue" Text="3"/>
        </Grid>

    </VerticalStackLayout>
