<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="benProj.Views.TrainingListPage"
             xmlns:models="clr-namespace:benProj.Models"
             xmlns:viewmodels="clr-namespace:benProj.ViewModels"
             
             Title="TrainingListPage">
    <VerticalStackLayout>
        <Label
    HorizontalOptions="Center"
    Text="עמוד הריצות שלך"
    VerticalOptions="Center" />

        <CollectionView ItemsSource="{Binding Trainings}">

            <CollectionView.EmptyView>
                <Label HorizontalTextAlignment="Center" Text="אין ריצות." />
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Training">
                    <Border StrokeThickness="1" >
                        <StackLayout Margin="2" BackgroundColor="White">
                            <Label Text="{Binding StartDate}" HorizontalTextAlignment="Start" TextColor="blue"/>
                            <Grid ColumnDefinitions="*,*,*,*"
                              RowDefinitions="*,*,*">
                                <Ellipse
                            Grid.Column="0"
                            Fill="{StaticResource BenPrimary }"
                            HeightRequest="40"
                            VerticalOptions="Center"
                            WidthRequest="40" />
                                <Label
                            FontSize="20"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Text="{Binding Duration}"
                            TextColor="White"
                             />
                            </Grid>
                        </StackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>