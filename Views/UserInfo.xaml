<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="benProj.Views.UserInfo"
             Title="UserInfo">
    <Grid
         Padding="20,0,20,0" 
         ColumnSpacing="10"
         RowSpacing="10"
         RowDefinitions="auto,*,auto" >
                    
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="{StaticResource BenPrimary}" Offset="0.0" />
                <GradientStop Color="White" Offset="0.5" />
            </LinearGradientBrush>
        </Grid.Background>

        <Frame  BackgroundColor="#FFFFFF" Grid.Row="1">
            <ScrollView   >
                <VerticalStackLayout Spacing="15" >
                    <Entry Placeholder="כמה זמן את/ה בתחום הריצה?" Text="{Binding EntryTimeRunning}" HorizontalTextAlignment="End" />
                    <Entry Placeholder="?מה המטרה שאת/ה מנסה להשיג" Text="{Binding EntryGoal}" HorizontalTextAlignment="End" />
                    <Entry Placeholder="מה המשקל שלך?" Text="{Binding EntryWeight}" HorizontalTextAlignment="End"/>
                    <Entry Placeholder="איזה דברים בריצה אתה לא מצליח ?" Text="{Binding EntryEmail}" HorizontalTextAlignment="End"/>
                    <Entry Placeholder="מה המשקל שלך?" Text="{Binding EntryEmail}" HorizontalTextAlignment="End"/>
                    <Entry Placeholder="איך הגעת אלינו?" Text="{Binding EntryHowKnowUs}" HorizontalTextAlignment="End"/>

                </VerticalStackLayout>
            </ScrollView>

        </Frame>
        <Grid
   
             Grid.Row="3"
             ColumnSpacing="5"
             ColumnDefinitions="*,*" 
             RowDefinitions="*,*"
                                    >
            <Button
         
         Grid.Column="0"
         Grid.ColumnSpan="2"
         Grid.Row="0"
         Background="{StaticResource BenPrimary}"
         CornerRadius="20"
         HorizontalOptions="Fill"
         VerticalOptions="Center"
         Text="הכנס בבקשה"
         IsEnabled="{Binding IsRegisterEnable}"
         Command="{Binding TryRegisterCommand}"
             />

       

        </Grid>



    </Grid>
</ContentPage>