<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="benProj.Views.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout>
        <!-- title-->
        <Label 
            BackgroundColor="LightBlue"
            Text="Welcome to LoginPage"
            VerticalOptions="Center" 
            HorizontalOptions="Center" Grid.Column="0" Grid.Row="0"
            FontSize="25"
            Margin="4"/>
        <!--  End title-->
        <!-- שדה ראשוןןן-->
        <Entry 
            x:Name="EntryPrivateName" 
            Placeholder="Enter User Name" 
            />
        <Label 
            x:Name="LblErrorPrivateName" 
            Style="{StaticResource errorLabel}"
         />
        <!-- שדה ראשוןןן-->
        <!-- שדה שני-->
        <Grid ColumnDefinitions="*,Auto">
            <Entry 
                x:Name="EntryPassword" 
                Placeholder="Your Password" 
                IsPassword="True" 
                Grid.Column="0"
                />
            <Button 
                Text="Show/Hide" 
                Clicked="Button_TogglePassword_Clicked"
                Grid.Column="1" 
                />
        </Grid>
       
        <Label 
            x:Name="LblErrorPassword" 
            Text="" 
            TextColor="Red" 
            FontSize="10"
            />
        <!-- שדה שני-->
        
        <!--FOOTER -->
        <Grid  x:Name="footTitle"
             Grid.Row="2"
             BackgroundColor="#E6DBAC" 
             ColumnDefinitions="*,*" 
             RowDefinitions="*,*" >

            <Button 
                 Text="Go to Login" 
                  Grid.Row="0" 
                 Grid.ColumnSpan="2" 
                 Background="Transparent"
                TextColor="DarkCyan"
                />
            <Label
                Style="{StaticResource footTitle}"
            />
        </Grid>

    </VerticalStackLayout>
</ContentPage>