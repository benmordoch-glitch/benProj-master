<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="benProj.Views.RegisterPage"
             Title="RegisterPage">
    <Grid RowDefinitions="auto,*,auto" ColumnSpacing="10" RowSpacing="10">
        <!--HEADER -->
        <Label BackgroundColor="LightBlue"
                Text="Welcome to Register"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                Grid.Column="0" 
                Grid.Row="0"/>
        <!--CONTENT -->
        <ScrollView 
            Grid.Row="1" 
            BackgroundColor="White">
            <VerticalStackLayout 
                Padding="20" 
                Spacing="15">
                
                <Entry 
                    x:Name="EntryPrivateName" 
                    Placeholder="Private Name" 
                    />
                <Label 
                    x:Name="LblErrorPrivateName" 
                    Style="{StaticResource errorLabel}"
                    />

                <Entry
                    x:Name="EntryFamilyName"
                    Placeholder="Family Name"
                    />
                <Label
                    x:Name="LblErrorFamilyName"
                    Style="{StaticResource errorLabel}"
                    />
                
                <Entry
                    x:Name="EntryUserName"
                    Placeholder="User Name"
                    />
                <Label 
                    x:Name="LblErrorUserName" 
                      Style="{StaticResource errorLabel}"
                    />

                <Entry x:Name="EntryEmail" Placeholder="Email" />
                <Label 
                    x:Name="LblErrorEmail" 
                    Style="{StaticResource errorLabel}"
                    />

                <Grid ColumnDefinitions="*,Auto">
                    <Entry 
                        x:Name="EntryPassword" 
                        Placeholder="Your Password" 
                        IsPassword="True" 
                        Grid.Column="0"/>
                    <Button 
                        Text="Show/Hide" 
                        Clicked="Button_TogglePassword_Clicked" 
                        Grid.Column="1" />
                </Grid>
                
                <Entry 
                    x:Name="ReTypePass" 
                    Placeholder="RetypePassword" 
                    />
                <Label 
                    x:Name="LblErrorPassword" 
                    Style="{StaticResource errorLabel}"
                    />
            </VerticalStackLayout>
        </ScrollView>
        <!--FOOTER -->
        <Grid 
            
            x:Name="Footer"
            Grid.Row="2" 
            BackgroundColor="Yellow" 
            ColumnDefinitions="*,*" 
            RowDefinitions="*,*" >
            <Button 
                Margin="4" 
                CornerRadius="10" 
                Text="Go to Login" 
                HorizontalOptions="Fill"  
                VerticalOptions="Center" 
                Grid.Row="0" 
                Grid.ColumnSpan="2" 
                Background="Red"         
                />
            <Button
                Text="Reset" 
                Style="{StaticResource fotterbtn}"
                Grid.Column="0"
                Grid.Row="1"

                />
            
            <Button 
                Text="Register" 
                Style="{StaticResource fotterbtn}"
                Grid.Column="1"
                Grid.Row="1"
                />
        </Grid>
    </Grid>
</ContentPage>