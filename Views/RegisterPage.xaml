<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="benProj.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="RegisterPage">
    <Grid
        ColumnSpacing="10"
        RowDefinitions="auto,*,auto"
        RowSpacing="10">
        <!--  HEADER  -->
        <Label
            Grid.Row="0"
            Grid.Column="0"
            BackgroundColor="LightBlue"
            HorizontalOptions="Center"
            Text="Welcome to RegisterPage"
            VerticalOptions="Center" />
        <!--  CONTENT  -->
        <ScrollView Grid.Row="1" BackgroundColor="White">

            <VerticalStackLayout Padding="20" Spacing="15">


                <Entry Placeholder="Private Name" Text="{Binding EntryPrivateName}" />
                <Label Style="{StaticResource errorLabel}" Text="{Binding LblErrorPrivateName}" />



                <Entry Placeholder="Family Name" Text="{Binding EntryFamilyName}" />
                <Label Style="{StaticResource errorLabel}" Text="{Binding LblErrorFamilyName}" />




                <Entry Placeholder="User Name" Text="{Binding EntryUserName}" />
                <Label Style="{StaticResource errorLabel}" Text="{Binding LblErrorUserName}" />




                <Entry Placeholder="Email" Text="{Binding EntryEmail}" />
                <Label Style="{StaticResource errorLabel}" Text="{Binding LblErrorEmail}" />




                <DatePicker Date="{Binding EntryBirthDate}" Style="{StaticResource errorDatePicker}" />
                <Label Style="{StaticResource errorLabel}" Text="{Binding ErrorBirthDate}" />


                <!--  Start password Grid  -->
                <Grid ColumnDefinitions="*,Auto">
                    <Entry
                        Grid.Column="0"
                        IsPassword="True"
                        Placeholder="Your Password"
                        Text="{Binding EntryPassword}" />


                    <Button x:Name="ShowPass"
                        Grid.Column="1" 
                        WidthRequest="30" 
                        BackgroundColor="PowderBlue" 
                        ImageSource="eye.png" />
                    <!--Clicked="OnShowPassButtonClicked"-->

                </Grid>
                <Label Style="{StaticResource errorLabel}" Text="{Binding ErrorPassword}" />
                <Entry
                    IsPassword="True"
                    Placeholder="RetypePassword"
                    Text="{Binding ReTypePass}" />

                <!--  End password Grid  -->
            </VerticalStackLayout>
        </ScrollView>



        <!--  FOOTER  -->
        <Grid
                x:Name="footTitle"
                Grid.Row="2"
                ColumnSpacing="5"
                BackgroundColor="White"
                ColumnDefinitions="*,*,*" >
            

            <Button
                Grid.Column="1"
                
                Background="Blue"
                 CornerRadius="10"
                HorizontalOptions="Fill"
                VerticalOptions="Center"
                Text="Register"
                 Command="{Binding EnterAppCommand}"
                    />

            <Button
                Grid.Column="0" 
                Background="Green"
                HorizontalOptions="Fill"
                Text= "Reset"
                Command="{Binding ResetCommand}"/>



            <Button
                Grid.Column="2"
                IsEnabled="True"
                Background="Blue"
                HorizontalOptions="Fill"
                Text="logIn" 
                Command="{Binding GotoLoginCommand}"/>




        </Grid>
    </Grid>
</ContentPage>