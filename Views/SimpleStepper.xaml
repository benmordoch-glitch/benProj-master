<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="benProj.Views.SimpleStepper"
             Title="SimpleStepper">
    <VerticalStackLayout BackgroundColor="LightGrey" WidthRequest="200" >
        <Label x:Name="lblresult"  Grid.Row="0" Grid.ColumnSpan="4" Text="0" HorizontalOptions="Center" FontSize="45" VerticalOptions="Center"/>
        <Label Text="Best calculator" HorizontalOptions="Center" FontSize="20" BackgroundColor="DarkOrange"/>
        <Grid RowSpacing="5" ColumnSpacing="5" ColumnDefinitions="*,*,*,*"  RowDefinitions="*,*,*,*,*,*" BackgroundColor="Red">
            
            <Button CornerRadius="100" Text="7" Grid.Column="0" Grid.Row="1" Clicked="ButtonNumber_Clicked"/>
            <Button CornerRadius="100" Text="8" Grid.Column="1" Grid.Row="1" Clicked="ButtonNumber_Clicked"/>
            <Button CornerRadius="100" Text="9" Grid.Column="2" Grid.Row="1" Clicked="ButtonNumber_Clicked"/>


            <Button CornerRadius="100" Text="4" Grid.Column="0" Grid.Row="2" Clicked="ButtonNumber_Clicked"/>
            <Button CornerRadius="100" Text="5" Grid.Column="1" Grid.Row="2" Clicked="ButtonNumber_Clicked"/>
            <Button CornerRadius="100" Text="6" Grid.Column="2" Grid.Row="2" Clicked="ButtonNumber_Clicked"/>
           

            <Button CornerRadius="100" Text="1" Grid.Column="0" Grid.Row="3" Clicked="ButtonNumber_Clicked"/>
            <Button CornerRadius="100" Text="3" Grid.Column="2" Grid.Row="3" Clicked="ButtonNumber_Clicked"/>
            <Button CornerRadius="100" Text="2" Grid.Column="1" Grid.Row="3" Clicked="ButtonNumber_Clicked"/>
            <Button  Text="0"  Grid.Column="0"  Grid.ColumnSpan="3" Grid.Row="5" Clicked="ButtonNumber_Clicked"/>

            <Button BackgroundColor="#FCAE1E" Text="-" Grid.Column="4" Grid.Row="1" Clicked="ButtonOperationClicked"/>
            <Button BackgroundColor="#FCAE1E" Text="+" Grid.Column="4" Grid.Row="2" Clicked="ButtonOperationClicked"/>
            <Button BackgroundColor="#FCAE1E" Text="AC" Grid.Column="4" Grid.Row="3" Clicked="ButtonClearClicked"/>
            <Button BackgroundColor="Green" Text="="  Grid.Column="4" Grid.Row="5" Clicked="ButtonEqualClicked"/>
            
            

        </Grid>
    </VerticalStackLayout>
</ContentPage>