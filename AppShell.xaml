<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="benProj.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:benProj"
    xmlns:views="clr-namespace:benProj.Views"
    Title="benProj"
    Shell.FlyoutBehavior="Flyout" FlowDirection="LeftToRight" Background="Transparent">
    <ToolbarItem Text="משתמש">
        
    </ToolbarItem>
    <ShellContent
        Title="הרשמה"
        ContentTemplate="{DataTemplate views:RegisterPage}"
        Route="RegisterPage" />
    <ShellContent
        Title="התחברות"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />
    <ShellContent
         Title="מסלולים"
         ContentTemplate="{DataTemplate views:CoursPage}"
         Route="CoursePage"/>
    <ShellContent
       Title="מידע על המשתמש"
       ContentTemplate="{DataTemplate views:UserInfo}"
       Route="UserInfo"/>
    <ShellContent
    Title="מסולים אחרונים"
    ContentTemplate="{DataTemplate views:LatestPaths}"
    Route="LatestPaths"/>

</Shell>
